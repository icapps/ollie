{
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "node",
    "mocha"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules" : {
    "class-methods-use-this": ["off"],
    "no-console": ["error", { "allow": ["log", "info", "warn", "error"]  }],
    "max-len": ["error", 150]
  },
  "globals": {
    "base": false,
    "expect": false,
    "nock": false,
    "request": false
  }
}
